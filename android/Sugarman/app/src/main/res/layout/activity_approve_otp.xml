<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    >
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="#f00"
        >
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:orientation="horizontal"
          > <!-- 3 элемента - назад, имя группы, МУБ/редактировать -->

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:contentDescription="@string/content_description"
            android:padding="7dp"
            android:scaleType="fitCenter"
            android:src="@drawable/back_arrow"
            android:tint="@color/white"
            />


        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            />
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            >
          <com.sugarman.myb.ui.views.CustomFontTextView
              android:id="@+id/tv_phone_number"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_gravity="center"
              android:ellipsize="end"
              android:gravity="center"
              android:maxLines="1"
              android:singleLine="true"
              android:textColor="@color/white"
              android:textSize="17sp"
              tools:text="Little Monkeys "
              />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            >
          <ImageView
              android:id="@+id/iv_cart"
              android:layout_width="45dp"
              android:layout_height="45dp"
              android:layout_gravity="center"
              android:contentDescription="@string/content_description"
              android:padding="7dp"
              android:scaleType="fitCenter"
              android:src="@drawable/back_arrow_reverse"
              android:tint="#fff"
              android:visibility="visible"
              tools:visibility="visible"
              />
          <TextView
              android:id="@+id/cart_counter"
              android:layout_width="15dp"
              android:layout_height="15dp"
              android:layout_alignEnd="@id/iv_cart"
              android:layout_alignRight="@id/iv_cart"
              android:layout_alignTop="@id/iv_cart"
              android:layout_marginRight="3dp"
              android:layout_marginTop="7dp"
              android:background="@drawable/circle_events"
              android:gravity="center"
              android:text="1"
              android:textColor="@android:color/white"
              android:textSize="10sp"
              android:visibility="gone"
              />
        </RelativeLayout>
      </LinearLayout>
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:gravity="center"
        android:textSize="18sp"
        android:text="@string/we_have_sent_you"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:textSize="16sp"
        android:gravity="center"
        android:text="@string/to_complete"
        />

    <EditText
        android:id="@+id/et_otp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="26sp"
        android:maxLength="5"
        android:layout_centerVertical="true"
        android:layout_marginTop="40dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:inputType="number"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="10dp"
      android:layout_marginStart="45dp"
      android:layout_marginEnd="45dp"
        android:background="@color/gray"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:id="@+id/resend_code"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Resend Code"
        android:textColor="@color/red"
        android:textSize="22sp"
        android:gravity="center"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="10dp"
        android:layout_marginStart="45dp"
        android:layout_marginEnd="45dp"
        android:layout_marginBottom="10dp"
        android:background="@color/gray"/>
  </LinearLayout>


</RelativeLayout>
