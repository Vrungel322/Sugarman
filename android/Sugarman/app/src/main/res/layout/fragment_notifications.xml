<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_root_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_notification_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:orientation="vertical">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rcv_notifications"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white" />

        <LinearLayout
            android:id="@+id/ll_bottom_item"
            android:layout_width="match_parent"
            android:layout_height="@dimen/notifications_bottom_container_height"
            android:background="@android:color/white"
            android:gravity="center_horizontal">

            <View
                android:layout_width="@dimen/notifications_bottom_divider_width"
                android:layout_height="@dimen/notifications_bottom_divider_height"
                android:layout_margin="@dimen/notifications_bottom_margin"
                android:background="@color/gray" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>