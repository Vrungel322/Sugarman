<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_main_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/heavy_white_transparent">

    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="@dimen/progress_size"
        android:layout_height="@dimen/progress_size"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="@dimen/login_margin"
        android:theme="@style/SugarmanProgress" />

    <com.sugarman.myb.ui.views.CustomFontTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/progress_bar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/progress_margin"
        android:text="@string/loading"
        android:textColor="@color/gray"
        android:textSize="@dimen/progress_text_size" />

</RelativeLayout>