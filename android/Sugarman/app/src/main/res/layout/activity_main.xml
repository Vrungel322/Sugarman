<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/rl_main_steps_container"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="7">
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp">
                    <ImageView
                        android:id="@+id/background_menu"
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        android:adjustViewBounds="false"

                        android:layout_centerVertical="true"
                        android:src="@drawable/menu_shadow"/>

                        <FrameLayout
                            android:id="@+id/frame_avatar"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignRight="@id/background_menu"
                            android:layout_centerVertical="true">
                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="10dp"
                                android:layout_marginBottom="5dp">
                            <ImageView
                                android:id="@+id/iv_avatar"
                                android:visibility="visible"
                                android:layout_width="46dp"
                                android:layout_height="46dp"
                                android:background="@color/trans"
                                android:adjustViewBounds="true"
                                android:scaleType="fitCenter"/>
                            <com.sugarman.myb.ui.views.CustomFontTextView
                                android:id="@+id/tv_avatar_events"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:background="@drawable/circle_events"
                                android:layout_alignTop="@id/iv_avatar"
                                android:layout_alignRight="@id/iv_avatar"
                                android:layout_alignEnd="@id/iv_avatar"
                                android:layout_marginLeft="10dp"
                                android:gravity="center"
                                android:textColor="@android:color/white"
                                android:textSize="12sp"
                                app:font="@string/font_roboto_medium"
                                tools:text="12" />
                            </RelativeLayout>

                        </FrameLayout>
                    </RelativeLayout>
                    <ImageView
                        android:id="@+id/iv_shop"
                        android:layout_width="55dp"
                        android:layout_height="55dp"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentLeft="true"
                        android:layout_marginTop="74dp"
                        android:contentDescription="@string/content_description"
                        android:scaleType="fitCenter"
                        android:src="@drawable/gift_icon" />
                    <ImageView
                        android:id="@+id/iv_create_group"
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="8dp"
                        android:contentDescription="@string/content_description"
                        android:scaleType="fitCenter"
                        android:src="@drawable/add_shadow" />
                    <ImageView
                        android:id="@+id/iv_search_group"
                        android:layout_width="55dp"
                        android:layout_height="55dp"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="74dp"
                        android:contentDescription="@string/content_description"
                        android:scaleType="fitCenter"
                        android:src="@drawable/search_shadow" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:id="@+id/rl_container_circle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center_horizontal"
                            >
                            <ImageView
                                android:layout_width="330dp"
                                android:layout_height="330dp"
                                android:layout_centerInParent="true"
                                android:background="@drawable/tripple_circle"
                                />

                            <ImageView
                                android:id="@+id/colored_strip"
                                android:layout_width="330dp"
                                android:layout_height="330dp"
                                android:layout_centerInParent="true"

                                />

                                <com.sugarman.myb.ui.views.CircleIndicatorView
                                    android:layout_centerInParent="true"
                                    android:id="@+id/civ_main"
                                    android:layout_width="280dp"
                                    android:layout_height="280dp"
                                    android:visibility="gone"
                                    android:background="@android:color/transparent" />
                            </RelativeLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_centerHorizontal="true"
                                android:gravity="center"
                                android:orientation="vertical">

                                <RelativeLayout
                                    android:layout_width="100dp"
                                    android:layout_height="110dp"
                                    android:id="@+id/ava_container">

                                    <ImageView
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:contentDescription="@string/content_description"
                                        android:scaleType="fitCenter"
                                        android:visibility="invisible"
                                        android:src="@drawable/ic_gray_hexagon" />

                                    <ImageView
                                        android:id="@+id/iv_animated_man"
                                        android:layout_centerHorizontal="true"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:adjustViewBounds="true"
                                        android:scaleType="fitCenter"
                                        android:contentDescription="@string/content_description" />



                                    <ImageView
                                        android:id="@+id/shadow"
                                        android:layout_width="50dp"
                                        android:layout_height="15dp"
                                        android:layout_centerHorizontal="true"
                                        android:layout_below="@+id/iv_animated_man"
                                        android:src="@drawable/shadow"/>

                                </RelativeLayout>
                                <View
                                    android:layout_width="150dp"
                                    android:layout_height="1px"
                                    android:background="#C9C9C9"/>
                                <com.sugarman.myb.ui.views.CustomFontTextView
                                    android:id="@+id/tv_counter"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/red"
                                    android:textSize="56sp"
                                    tools:text="0" />

                                <com.sugarman.myb.ui.views.CustomFontTextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/steps_today_caps"
                                    android:textColor="@color/gray"
                                    android:textSize="@dimen/main_steps_caps_text_size"
                                    app:font="@string/font_roboto_medium" />

                                <com.sugarman.myb.ui.views.CustomFontTextView
                                    android:id="@+id/tv_start_value"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/dark_gray"
                                    android:textSize="10sp"
                                    android:visibility="gone" />

                                <com.sugarman.myb.ui.views.CustomFontTextView
                                    android:id="@+id/tv_calculated"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/dark_gray"
                                    android:textSize="10sp"
                                    android:visibility="gone" />

                                <com.sugarman.myb.ui.views.CustomFontTextView
                                    android:id="@+id/tv_cache"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/dark_gray"
                                    android:textSize="10sp"
                                    android:visibility="gone" />
                            </LinearLayout>

                        </RelativeLayout>

                        <LinearLayout
                            android:id="@+id/ll_search_container"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingBottom="@dimen/main_search_margin_bottom"
                            android:layout_marginEnd="@dimen/main_search_margin"
                            android:layout_marginStart="@dimen/main_search_margin"
                            android:gravity="center"
                            android:orientation="vertical">

                            <com.sugarman.myb.ui.views.CustomFontTextView
                                android:id="@+id/tv_blink_title"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:background="@android:color/transparent"
                                android:drawablePadding="@dimen/main_search_icon_padding"
                                android:drawableStart="@drawable/ic_search_light"
                                android:gravity="center"
                                android:paddingLeft="8dp"
                                android:paddingRight="8dp"
                                android:text="@string/search_groups"
                                android:textColor="@color/gray"
                                android:textSize="@dimen/main_search_text_size"
                                app:font="@string/font_roboto_regular" />
                        </LinearLayout>
                    </LinearLayout>
                </RelativeLayout>


                <com.sugarman.myb.ui.views.SquarePagerIndicatorArrows
                    android:id="@+id/spi_challenges"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:gravity="center" />


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="6">

                    <android.support.v4.view.ViewPager
                        android:id="@+id/vp_challenges"
                        android:layout_width="match_parent"
                        android:layout_alignParentBottom="true"
                        android:layout_height="wrap_content"
                        android:clipToPadding="false"
                        android:paddingEnd="0dp"
                        android:paddingStart="@dimen/main_padding" />

                </RelativeLayout>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <include
        android:id="@+id/layout_conn_error"
        layout="@layout/layout_connection_error"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal" />

</FrameLayout>