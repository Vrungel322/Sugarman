<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.sugarman.myb.ui.activities.shopInviteFriend.ShopInviteFriendsActivity">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            >
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:src="@drawable/shop_product_bar"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                > <!-- 3 элемента - назад, имя группы, МУБ/редактировать -->

                <ImageView
                    android:id="@+id/iv_back"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:contentDescription="@string/content_description"
                    android:padding="7dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/back_arrow"
                    android:tint="@color/white"
                    />


                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    />
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    >
                    <com.sugarman.myb.ui.views.CustomFontTextView
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_gravity="center"
                        android:ellipsize="end"
                        android:gravity="center"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:textColor="@color/dark_gray"
                        android:textSize="17sp"
                        app:font="@string/font_roboto_medium"
                        />
                    <TextView
                        android:id="@+id/bAddFriends"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="7dp"
                        android:paddingBottom="7dp"
                        android:paddingRight="15dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:text="@string/invite"
                        android:textColor="#999"
                        android:src="@drawable/ic_apply"
                        />
                </RelativeLayout>
            </LinearLayout>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/progressBarLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <ProgressBar
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                />
        </RelativeLayout>
        <ScrollView
            android:id="@+id/nsv_friends"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:adjustViewBounds="true"
                        android:scaleType="fitCenter"
                        android:src="@drawable/background_shop_white"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:gravity="center"
                        android:paddingLeft="50dp"
                        android:paddingRight="50dp"
                        android:paddingTop="37dp"
                        android:text="@string/invite_friends_to_the_MYB"
                        android:textAlignment="center"
                        android:textColor="#434343"
                        android:textSize="18sp"
                        />
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:orientation="vertical"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:paddingBottom="7dp"
                            android:text="@string/already_installed_by_your_link"
                            android:textColor="#999999"
                            android:textSize="15sp"
                            />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:paddingBottom="10dp"
                            >
                            <ImageView
                                android:id="@+id/avatar_invites_1"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:paddingRight="10dp"
                                android:src="@drawable/shop_icon_circle"
                                />
                            <ImageView
                                android:id="@+id/avatar_invites_2"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:paddingRight="10dp"
                                android:src="@drawable/shop_icon_circle"
                                />
                            <ImageView
                                android:id="@+id/avatar_invites_3"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:paddingRight="10dp"
                                android:src="@drawable/shop_icon_circle"
                                />
                            <ImageView
                                android:id="@+id/avatar_invites_4"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:paddingRight="10dp"
                                android:src="@drawable/shop_icon_circle"
                                />
                            <ImageView
                                android:id="@+id/avatar_invites_5"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:paddingRight="10dp"
                                android:src="@drawable/shop_icon_circle"
                                />
                        </LinearLayout>
                    </LinearLayout>

                </RelativeLayout>
                <FrameLayout
                    android:id="@+id/flContaiter"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        >
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:weightSum="6"
                            >
                            <com.sugarman.myb.ui.views.CustomFontEditText
                                android:id="@+id/cfetSearchFriends"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/create_group_padding"
                                android:layout_weight="4"
                                android:background="@drawable/gray_stroke_background"
                                android:drawablePadding="@dimen/create_group_et_padding_horizontal"
                                android:drawableStart="@drawable/ic_search_light"
                                android:gravity="center_vertical"
                                android:hint="@string/search_and_invite"
                                android:inputType="textVisiblePassword"
                                android:maxLines="1"
                                android:paddingBottom="@dimen/create_group_et_padding_vertical"
                                android:paddingEnd="@dimen/create_group_et_padding_horizontal"
                                android:paddingStart="@dimen/create_group_et_padding_horizontal"
                                android:paddingTop="@dimen/create_group_et_padding_vertical"
                                android:singleLine="true"
                                android:textColor="@color/dark_gray"
                                android:textColorHint="@color/gray"
                                android:textSize="@dimen/create_group_et_text_size"
                                app:font="@string/font_roboto_regular"
                                />
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_marginTop="15dp"
                                android:layout_weight="2"
                                android:orientation="horizontal"
                                >
                                <ImageView
                                    android:id="@+id/fb_filter"
                                    android:layout_width="25dp"
                                    android:layout_height="25dp"
                                    android:alpha="0.5"
                                    android:src="@drawable/fb_filter"
                                    />
                                <ImageView
                                    android:id="@+id/vk_filter"
                                    android:layout_width="25dp"
                                    android:layout_height="25dp"
                                    android:layout_marginLeft="10dp"
                                    android:alpha="0.5"
                                    android:src="@drawable/vk_filter"
                                    />
                                <ImageView
                                    android:id="@+id/ph_filter"
                                    android:layout_width="25dp"
                                    android:layout_height="25dp"
                                    android:layout_marginLeft="10dp"
                                    android:src="@drawable/ph_filter"
                                    />
                            </LinearLayout>
                        </LinearLayout>
                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/rcv_friends"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/white"
                            android:scrollbars="none"
                            android:visibility="visible"
                            />
                    </LinearLayout>
                </FrameLayout>

            </LinearLayout>
        </ScrollView>
    </LinearLayout>


</android.support.constraint.ConstraintLayout>
