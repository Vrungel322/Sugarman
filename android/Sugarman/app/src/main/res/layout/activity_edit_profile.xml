<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAFAFA"
    tools:context="com.sugarman.myb.ui.activities.EditProfileActivity"
    >
  <LinearLayout
      android:layout_width="0dp"
      android:layout_height="0dp"
      android:orientation="vertical"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="#FAFAFA"
        >


      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:orientation="horizontal"
          > <!-- 3 элемента - назад, имя группы, МУБ/редактировать -->

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:contentDescription="@string/content_description"
            android:padding="7dp"
            android:scaleType="fitCenter"
            android:src="@drawable/back_arrow"
            android:tint="#000"
            />


        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            />
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            >
          <com.sugarman.myb.ui.views.CustomFontTextView
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_gravity="center"
              android:ellipsize="end"
              android:gravity="center"
              android:maxLines="1"
              android:singleLine="true"
              android:text="@string/profile_settings"
              android:textColor="@color/dark_gray"
              android:textSize="17sp"
              app:font="@string/font_roboto_medium"
              tools:text="Little Monkeys "
              />
        </RelativeLayout>
        <ImageView
            android:id="@+id/iv_next"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"

            android:contentDescription="@string/content_description"
            android:paddingBottom="7dp"
            android:paddingLeft="4dp"
            android:paddingRight="10dp"
            android:paddingTop="7dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_apply"
            android:tint="@color/vk_black"
            android:visibility="visible"
            tools:visibility="visible"
            />

      </LinearLayout>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#95989A"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:background="#FAFAFA"
        android:gravity="center"
        android:orientation="vertical"
        >

      <ImageView
          android:id="@+id/iv_profile_avatar"
          android:layout_width="80dp"
          android:layout_height="80dp"
          android:layout_gravity="center"
          android:src="@drawable/ic_gray_avatar"
          />
      <TextView
          android:id="@+id/tv_change_photo"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center"
          android:layout_marginTop="15dp"
          android:gravity="center"
          android:text="@string/change_profile_photo"
          />
    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#95989A"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        >

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal"
          >

        <ImageView
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:padding="12dp"
            android:src="@drawable/icon_user"
            />
        <EditText
            android:id="@+id/et_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:hint="Andrew Walker"
            android:background="@android:color/transparent"
            android:maxLines="1"
            />

      </LinearLayout>
      <View
          android:layout_width="match_parent"
          android:layout_height="1px"
          android:layout_marginLeft="15dp"
          android:background="#95989A"
          />
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal"
          >

        <ImageView
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:padding="12dp"
            android:src="@drawable/icon_phone"
            />
        <EditText
            android:id="@+id/et_phone_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="+38 095 671 27 16"
            android:layout_gravity="center"
            android:background="@android:color/transparent"
            android:inputType="phone"
            android:maxLines="1"
            />

      </LinearLayout>
      <View
          android:layout_width="match_parent"
          android:layout_height="1px"
          android:layout_marginLeft="15dp"
          android:background="#95989A"
          />
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal"
          >

        <ImageView
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:padding="12dp"
            android:src="@drawable/icon_message"
            />
        <EditText
            android:id="@+id/et_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:hint="walker@sugarman.com"
            android:background="@android:color/transparent"
            android:maxLines="1"
            />

      </LinearLayout>
      <View
          android:layout_width="match_parent"
          android:layout_height="1px"
          android:layout_marginLeft="15dp"
          android:background="#95989A"
          />
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="20dp"
        android:text="SOCIAL MEDIA"
        android:textSize="12sp"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#95989A"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        >

      <TextView
          android:id="@+id/tv_facebook"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_gravity="center"
          android:layout_marginLeft="15dp"
          android:layout_weight="1"
          android:text="Facebook"
          android:textSize="16sp"
          />
      <CheckBox
          android:id="@+id/cb_facebook"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center"
          android:layout_marginRight="15dp"
          />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#95989A"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        >

      <TextView
          android:id="@+id/tv_vk"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_gravity="center"
          android:layout_marginLeft="15dp"
          android:layout_weight="1"
          android:text="VK"
          android:textSize="16sp"
          />
      <CheckBox
          android:id="@+id/cb_vk"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center"
          android:layout_marginRight="15dp"
          />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#95989A"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="15dp"
        android:background="#95989A"
        />
  </LinearLayout>

  <LinearLayout
      android:id="@+id/fragment_container"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="horizontal" />

  <include
      android:id="@+id/layout_conn_error"
      layout="@layout/layout_connection_error"
      android:visibility="gone" />
</android.support.constraint.ConstraintLayout>
